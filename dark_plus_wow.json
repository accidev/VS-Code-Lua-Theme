{
	"$schema": "vscode://schemas/color-theme",
	"name": "Dark+ (wow-bundle)",
	"include": "./theme-defaults/themes/dark_plus.json",
	"tokenColors": [
		// Comments -- just add italics to the current style
		{
			"scope": "comment",
			"settings": {
				"fontStyle": "italic"
			}
		},

		// Lua colors ONLY - except for comments above, we dont mess with other languages
		// standart thing before var
		/* {
			"scope": "constant",
			"settings": {
				"foreground": "#ff0000"
			}
		}, */
		// functions
		{
			"scope": [
				"keyword.control.lua", "keyword.operator.logical.lua", "storage.modifier.lua",
				"support.function.lua"
			],
			"settings": {
				"foreground": "#e41aff"
			}
		},
		// local
		{
			"name": "Keyword",
			"scope": "keyword",
			"settings": {
				"fontStyle": "",
				"foreground": "#ff3e19"
			}
		},
		// number
		{
			"name": "Number",
			"scope": "constant.numeric",
			"settings": {
				"fontStyle": "",
				"foreground": "#6fff00"
			}
		},
		{
			"scope": [
				"support.function.metamethod.lua"
			],
			"settings": {
				"foreground": "#a671a1"
			}
		},
		// concatac
		{
			"scope": [
				"keyword.operator.lua"
			],
			"settings": {
				"foreground": "#ff0a13"
			}
		},
		{
			"scope": [
				"entity.name.function.lua",
				"entity.name.table.lua", "entity.name.member.lua", "entity.name.method.lua"
			],
			"settings": {
				"foreground": "#e7e754"
			}
		},
		{
			"scope": [
				"variable.language.lua", "constant.language.lua", "constant.language.quoted.lua",
				"support.constant.lua"
			],
			"settings": {
				"foreground": "#ff5507"
			}
		},
		{
			"scope": [
				"constant.character.escape.lua"
			],
			"settings": {
				"foreground": "#ffffff"
			}
		},

		// Word of Warcraft .toc file colors
		{
			"scope": "keyword.operator.toc",
			"settings": {
				"foreground": "#4dff00"
			}
		},
		{
			"scope": "keyword.control.toc",
			"settings": {
				"foreground": "#c586c0"
			}
		},
		{
			"scope": "keyword.control.x.toc",
			"settings": {
				"foreground": "#a671a1"
			}
		},
		
		{
			"scope": "variable.parameter.toc",
			"settings": {
				"foreground": "#c9c0c0"
			}
		},		
		
		// first string   variable.other, variable.js,
		{
			"name": "Class Variable",
			"scope": "variable.other, variable.js",
			"settings": {
				"fontStyle": "",
				"foreground": "#00ff6e"
			}
		},
		// {
		// 	// "name": "Class Variable",
		// 	"scope":  "punctuation.separator.variable",
		// 	"settings": {
		// 		"fontStyle": "",
		// 		"foreground": "#ffffff"
		// 	}
		// },
		// last var
		{
			// "name": "Function Call Variable",
			"scope": "variable.other.property",
			"settings": {
				"fontStyle": "",
				"foreground": "#0080ff"
			}
		},
		
		// ------------ in skobki ""
		{
			"name": "String",
			"scope": "string",
			"settings": {
				"fontStyle": "",
				"foreground": "#ffffff"
			}
		},

		// World of Warcraft API colors
		{
			"name": "WoW C API functions",
			"scope": "support.function.api.lua",
			"settings": {
				"foreground": "#ff8000"
			}
		},
		{
			"scope": [
				"support.function.api.lua.protected", "support.function.api.lua.nocombat"
			],
			"settings": {
				"fontStyle": "underline"
			}
		},

		{
			"name": "Widgets methods",
			"scope": "support.method.api.lua",
			"settings": {
				"foreground": "#ff8000"
			}
		},

		{
			"name": "WoW Library (Lua functions)",
			"scope": "support.function.library.lua",
			"settings": {
				"foreground": "#ffaa00"
			}
		},
		{
			"scope": "support.variable.object.library.lua",
			"settings": {
				"foreground": "#ffd500"
			}
		},
		// value "#d7ba7d"
		{
			"scope": "support.variable.value.library.lua",
			"settings": {
				"foreground": "#ff8c00"
			}
		},

		{
			"name": "WoW API Constants",
			"scope": [
				"support.constant.api.lua",
				"support.constant.quoted.api.lua", "support.constant.quoted.handler.api.lua", "support.constant.quoted.event.api.lua"
			],
			"settings": {
				"foreground": "#45eccb"
			}
		},

		{
			"name": "Removed stuff",
			"scope": [ "invalid.removed.lua", "invalid.illegal.lua" ],
			"settings": {
				"foreground": "#e97d7d"
			}
		}
	]
}
